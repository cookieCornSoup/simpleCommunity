<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.simplecommunity">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.MyApplication">


        <activity android:name="com.example.simplecommunity.feature.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.simplecommunity.feature.signup.SignupActivity" />
        <activity android:name="com.example.simplecommunity.feature.MainActivity" />
        <activity android:name="com.example.simplecommunity.base.BaseActivity"
            tools:ignore="Instantiatable" />
        <activity android:name="com.example.simplecommunity.feature.signup.SigninActivity"/>
        <activity android:name="com.example.simplecommunity.feature.PostWriting"/>
        <activity android:name="com.example.simplecommunity.feature.signup.EmailCheckActivity"/>

    </application>

</manifest>